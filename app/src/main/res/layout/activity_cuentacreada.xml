<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<ImageView
    android:id="@+id/imagefondo"
    android:layout_width="455dp"
    android:layout_height="747dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@drawable/fondolog" />

<ImageView
    android:id="@+id/imagelogo"
    android:layout_width="107dp"
    android:layout_height="109dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="150dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/logo2" />

<TextView
    android:id="@+id/textcoden"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="164dp"
    android:fontFamily="@font/inter"
    android:text="Coden"
    android:textColor="#989898"
    android:textColorLink="#FFFFFF"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imagelogo"
    app:layout_constraintVertical_bias="0.0" />


<TextView
    android:id="@+id/textbi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="148dp"
    android:layout_marginTop="12dp"
    android:fontFamily="sans-serif-medium"
    android:text="Bienvenidos a Coden"
    android:textColor="#9A69B8"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textcoden" />


    <TextView
        android:id="@+id/textmensajes"
        android:layout_width="331dp"
        android:layout_height="160dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-black"
        android:text="Tu cuenta ha sido creada exitosamente!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/textbi"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/textbi"
        app:layout_constraintTop_toBottomOf="@+id/textbi" />

    <Button
    android:id="@+id/buttoninicio"
    android:layout_width="330dp"
    android:layout_height="48dp"
    android:layout_marginTop="160dp"
    android:background="@drawable/fondo_degradado_boton"
    android:fontFamily="sans-serif-condensed-medium"
    android:text="Comienza tu aventura"
    android:textAllCaps="false"
    android:textColor="@color/white"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="@+id/textmensajes"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@+id/textmensajes"
    app:layout_constraintTop_toBottomOf="@+id/textmensajes" />


<RelativeLayout
    android:layout_width="350dp"
    android:layout_height="50dp"
    android:layout_marginTop="15dp"
    app:layout_constraintEnd_toEndOf="@+id/buttoninicio"
    app:layout_constraintHorizontal_bias="0.564"
    app:layout_constraintStart_toStartOf="@+id/buttoninicio"
    app:layout_constraintTop_toBottomOf="@+id/buttoninicio">


    <!-- BotÃ³n Gracias  por unirte a nosotros!-->


    <Button
        android:id="@+id/buttoncontactanos"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/inter"
        android:text="Contactanos"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/buttonsoporte"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/buttoncontactanos"
        android:background="@android:color/transparent"
        android:fontFamily="@font/inter"
        android:text="Soporte tecnico"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>