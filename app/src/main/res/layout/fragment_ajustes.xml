<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/flunanegro"
    tools:context=".AjustesFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="159dp"
        android:layout_height="731dp"
        android:layout_marginBottom="512dp"
        app:cardBackgroundColor="#39FFFFFF"
        app:cardCornerRadius="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/imagelogo"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="144dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo2" />

        <TextView
            android:id="@+id/textcoden"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="99dp"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/inter"
            android:text="Coden"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            />


        <Button
            android:id="@+id/buttonajustecuenta"
            android:layout_width="159dp"
            android:layout_height="52dp"
            android:layout_marginTop="150dp"
            android:background="#92454545"
            android:fontFamily="@font/dotgothic16"
            android:text="Ajustes de la cuenta"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            />

        <Button
            android:id="@+id/buttonpassysegu"
            android:layout_width="159dp"
            android:layout_height="52dp"
            android:layout_marginTop="205dp"
            android:background="#2FFFFFFF"
            android:fontFamily="@font/dotgothic16"
            android:text="Contraseña y seguridad"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textajustes"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/dotgothic16"
        android:text="Ajustes de la cuenta"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textgestionar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/dotgothic16"
        android:text="Gestionar los datos de tu cuenta."
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textinfocuenta"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/dotgothic16"
        android:text="Información de la cuenta"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />


    <TextView
        android:id="@+id/textdatosp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/dotgothic16"
        android:text="Datos personales"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/editTextnickname"
        android:layout_width="242dp"
        android:layout_height="70dp"
        android:layout_marginTop="210dp"
        android:layout_marginStart="164dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/dotgothic16"
        android:hint="Nombre de usuario\nPYTHON"
        android:padding="8dp"
        android:textColorHint="#FFFFFF"
        android:textSize="19sp"
        />

    <EditText
        android:id="@+id/editTextnombre"
        android:layout_width="242dp"
        android:layout_height="70dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="164dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/dotgothic16"
        android:hint="Nombre\nLu**"
        android:padding="8dp"
        android:textColorHint="#FFFFFF"
        android:textSize="19sp"
        />


    <EditText
        android:id="@+id/editTextapellido"
        android:layout_width="242dp"
        android:layout_height="70dp"
        android:layout_marginTop="425dp"
        android:layout_marginStart="164dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/dotgothic16"
        android:hint="Apellidos\nCh****"
        android:padding="8dp"
        android:textColorHint="#FFFFFF"
        android:textSize="19sp"
        />


    <EditText
        android:id="@+id/editTextcorreo"
        android:layout_width="242dp"
        android:layout_height="70dp"
        android:layout_marginTop="530dp"
        android:layout_marginStart="164dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/dotgothic16"
        android:hint="Correo electronico\nlu****@gmail.com"
        android:padding="8dp"
        android:textColorHint="#FFFFFF"
        android:textSize="19sp"
        />


    <EditText
        android:id="@+id/editTextpais"
        android:layout_width="242dp"
        android:layout_height="70dp"
        android:layout_marginTop="635dp"
        android:layout_marginStart="164dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/dotgothic16"
        android:hint="Pais\nCo*****"
        android:padding="8dp"
        android:textColorHint="#FFFFFF"
        android:textSize="19sp"
        />


</FrameLayout>